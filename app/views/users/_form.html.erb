<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.messages.each do |message| %>
        <div class="message"><%= message.last.last.html_safe %></div>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
  <%= f.label :name %></br>
  <%= f.text_field :name, size: 40 %></br>
</div>
</br>
<div class="field">
<%= f.label :email, 'Email Address'%></br>
<%= f.text_field :email, size: 40,:input_html => { :class => 'form-control', :type => 'email' } %></br>
</div>
</br>
<div class="field">
<%= f.label :password_digest, 'Password' %></br>
<%= f.password_field :password_digest, size: 40 %></br>
</div>
</br>
<div class="field">
<%= f.label :password_digest_confirmation, 'Confirm' %></br>
<%= f.password_field :password_digest_confirmation, size: 40 %></br>
</div>
<%if cookies[:username] == "admin" %>
<div class="field">
<%= f.label :stock, 'Stock' %></br>
<%= f.text_field :stock, size: 40 %></br>
</div>
<div class="field">
<%= f.label :balance, 'Balance' %></br>
<%= f.text_field :balance, size: 40 %></br>
</div>
<%end%>
</br>
<div class="actions">
  <%= f.submit %>
 </div>
 <% end %>
