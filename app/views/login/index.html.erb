<div class="row regis">
<div class="navbar navbar-inverse navbar-fixed-top">
	<%= image_tag("int_logo.png", :alt => "Logo") %>
</div>

<section id="contenu" class="span6">
	<div class="hero-unit">
		<%= @verification -%>
		<%= @message %>
		<h1>Login</h1>
		<%=form_for :login, url: url_for( :controller => :login, :action => :index, :method=>:post ) do |f| %>
				<%= f.label "Username : " %>
				<%= f.text_field :username, :class=>"register-control",:placeholder=>"Username", :type=>"text"%>
				</br>
				<%= f.label "Password : " %>
				<%= f.text_field :password, :class=>"register-control",:placeholder=>"Password", :type=>"password"%>
			<div class="actions">
				<%= f.submit "Login", :class=>"registerPgBtn btn btn-large registerbtn"%>
			</div>
		<% end %>
	</div>
</section>
</div>